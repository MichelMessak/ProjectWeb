<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>fr.esiea.fc.tasks.document.panelcontrol.NotifMailCorrectError</listener-class>
    </listener>
    <servlet>
        <servlet-name>MainDispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ReportHelper</servlet-name>
        <servlet-class>com.itc.fc4.control.ReportHelper</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportHelper</servlet-name>
        <url-pattern>/report.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainDispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.task</url-pattern>
        <url-pattern>*.form</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    <!--resource-ref>
        <description>Pool de Conexiones FileControl4</description>
        <res-ref-name>jdbc/fc4_dbpool</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/generalError.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/generalError.jsp</location>
    </error-page>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>fr.esiea.fc.control.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UrlFilter</filter-name>
        <filter-class>fr.esiea.fc.control.UrlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UrlFilter</filter-name>
        <!--<url-pattern>/*</url-pattern>-->
        <url-pattern>*.task</url-pattern>
        <url-pattern>*.form</url-pattern>
    </filter-mapping>
</web-app>
